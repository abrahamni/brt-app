<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="BlockStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/block_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">21sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonStyle" parent="QuestionBlockStyle">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>


    <style name="QuestionBlockStyle" parent="BlockStyle">
        <item name="android:background">@drawable/shape_question_green</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AnswerBlockStyle" parent="BlockStyle">
        <item name="android:background">@drawable/selector_question</item>
        <item name="android:textColor">@color/selector_question_text</item>
    </style>

    <style name="ButtonTextStyle" parent="BlockStyle">
        <item name="android:background">@drawable/shape_answer_grey</item>
        <item name="android:textColor">@color/blackish</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextStyle" parent="BlockStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:layout_marginTop">@dimen/edit_text_top_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/shape_edit_text_border</item>
        <item name="android:paddingLeft">@dimen/paddgin_edit_text</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textSize">@dimen/edit_text_text_size</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
